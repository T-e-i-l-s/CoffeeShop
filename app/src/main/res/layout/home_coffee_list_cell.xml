<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/coffee_list_cell_shape"
    android:orientation="vertical"
    android:padding="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coffee_list_cell_image_shape"
        android:clipToOutline="true"
        tools:targetApi="s">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_coffee_image"
            android:contentDescription="@null"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/star_icon"
                android:contentDescription="@null"/>

            <Space
                android:layout_width="4dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/coffee_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="x.x"
                android:fontFamily="@font/app_font"
                android:textColor="@color/white"
                android:textSize="8sp"/>
        </LinearLayout>
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <TextView
        android:id="@+id/coffee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_font"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textFontWeight="600"
        tools:targetApi="p" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <TextView
        android:id="@+id/coffee_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_font"
        android:textColor="@color/gray"
        android:textSize="12sp"
        tools:targetApi="p" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">
        <TextView
            android:id="@+id/coffee_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/app_font"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textFontWeight="600"
            tools:targetApi="p"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/coffee_list_cell_plus_icon_shape"
            android:src="@drawable/plus_icon"
            android:contentDescription="@null"
            android:padding="8dp"/>
    </LinearLayout>
</LinearLayout>